    <dependency.commons-cli.version>1.2</dependency.commons-cli.version>
    <dependency.org.springFramework.spring.version>2.5.6</dependency.org.springFramework.spring.version>
    <dependency.pentaho-mongodb-plugin.revision>8.1-SNAPSHOT</dependency.pentaho-mongodb-plugin.revision>
    <dependency.pentaho-platform.revision>8.1-SNAPSHOT</dependency.pentaho-platform.revision>
